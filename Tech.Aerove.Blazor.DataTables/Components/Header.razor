@using Tech.Aerove.Blazor.DataTables.Enums
@inherits ComponentBase

@if (ColumnModel != null && ColumnModel.OrderableDirection != OrderableDirection.Disabled)
{
    <th scope="col" class="orderable @ColumnModel.OrderableDirection.GetClass()" @attributes="InputAttributes" @onclick="ChangeDirectionAsync">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @Name
        }
    </th>
}
else
{
    <th scope="col" @attributes="InputAttributes">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @Name
        }
    </th>
}