@inherits ComponentBase

@if (Model != null && Model.Orderable)
{
    <th scope="col" class="orderable @Direction.GetClass()" @attributes="InputAttributes" @onclick="ChangeDirectionAsync">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @Name
        }
    </th>
}
else
{
    <th scope="col" @attributes="InputAttributes">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @Name
        }
    </th>
}

