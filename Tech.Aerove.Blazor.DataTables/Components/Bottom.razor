@typeparam TItem
@inherits ComponentBase
<div class="row table-bottom">
    <div class="col-12 col-md-5">
        <div class="result-descriptor">
            @GetResultdescriptor()
        </div>
    </div>
    <div class="col-12 col-md-7">
        <ul class="page-list">
            <li class="page-li first @(Api.Page==1?"disabled":"")">
                <span href="" class="page-button" @onclick="SetPageFirstAsync" @onclick:preventDefault>
                    First
                </span>
            </li>
            <li class="page-li left @(Api.Page==1?"disabled":"")">
                <span href="" class="page-button" @onclick="SetPagePreviousAsync" @onclick:preventDefault>
                    &lt;
                </span>
            </li>
            <li class="page-li active">
                <span href="" class="page-button" @onclick:preventDefault>@Api.Page</span>
            </li>
            <li class="page-li right @(Api.Page==Api.TotalPages?"disabled":"")">
                <span href="" class="page-button" @onclick="SetPageNextAsync" @onclick:preventDefault>
                    >
                </span>
            </li>
            <li class="page-li last @(Api.Page==Api.TotalPages?"disabled":"")">
                <span href="" class="page-button" @onclick="SetPageLastAsync" @onclick:preventDefault>
                    Last
                </span>
            </li>
        </ul>
    </div>
</div>